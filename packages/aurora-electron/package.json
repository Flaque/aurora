{
  "name": "@aurora/electron",
  "version": "0.0.0",
  "main": "compiled/main.js",
  "description": "A note taking app.",
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "build": {
    "appId": "tundra.aurora",
    "productName": "Aurora",
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "scripts": {
    "build": "yarn run build:main; yarn run build:renderer",
    "build:main": "webpack --colors --progress --config webpack.config.main.js",
    "build:renderer": "webpack --colors --progress --config webpack.config.renderer.js",
    "build-watch:main": "yarn run build:main -- --watch",
    "build-watch:renderer": "yarn run build:renderer -- --watch",
    "dev": "yarn build; ./node_modules/.bin/electron .; yarn build-watch:renderer",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.13.0",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^20.0.4",
    "spectron": "^3.7.2"
  }
}
