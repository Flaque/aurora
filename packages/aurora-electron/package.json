{
  "name": "@aurora/electron",
  "version": "0.0.3",
  "main": "compiled/main.js",
  "description": "A note taking app.",
  "dependencies": {
    "promise": "^8.0.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "build": {
    "appId": "tundra.aurora",
    "productName": "Aurora",
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "scripts": {
    "build": "npm run build:main; npm run build:renderer",
    "build:main": "webpack --colors --progress --config webpack.config.main.js",
    "build:renderer": "webpack --colors --progress --config webpack.config.renderer.js",
    "build-watch:main": "npm run build:main -- --watch",
    "build-watch:renderer": "npm run build:renderer -- --watch",
    "dev": "npm run build; ./node_modules/.bin/electron .; npm run build-watch:renderer",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.13.0",
    "html-webpack-plugin": "^2.29.0",
    "jest": "^20.0.4",
    "spectron": "^3.7.2"
  }
}
